<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.jackandphantom.circularimageview.CircleImage
        android:id="@+id/img_sex"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/user_default"/>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/img_sex"
        android:layout_toStartOf="@id/btn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_name_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textColor="@color/gray_dark"
            android:text="Juan Carlos Lopez"/>
        <TextView
            android:id="@+id/txt_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:text="D.N.I.: 369875687"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_more"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_more"
        android:background="@null"/>
</RelativeLayout>
