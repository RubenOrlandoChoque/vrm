<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content_il_row"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@null">
    <RelativeLayout
        android:id="@+id/content_il_color"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_il_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/group8"
            android:background="@null"/>
        <TextView
            android:id="@+id/txt_il_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_il_item"
            android:layout_margin="3dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="Texto 1"/>
        <TextView
            android:id="@+id/txt_il_from_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_il_item"
            android:layout_below="@+id/txt_il_title"
            android:layout_margin="3dp"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:text="Texto 2"/>

        <TextView
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="7dp"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/white"
            android:background = "@drawable/bg_circle_green"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>
