<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_filters">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_filters"
        android:weightSum="4">
        <Button
            android:id="@+id/btn_not_gps"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:drawableTop="@drawable/ic_location_off"
            android:textColor="@color/orange"
            android:paddingTop="5dp"
            android:background="@color/yellow_transparent"
            android:layout_height="match_parent"
            android:textSize="14dp"
            android:text="Sin GPS"/>
        <RelativeLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <Button
            android:id="@+id/btn_point"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/orange"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:background="@null"
            android:text="Punto"/>
        <RelativeLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <Button
            android:id="@+id/btn_polyline"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:textSize="14dp"
            android:drawableTop="@drawable/ic_polyline"
            android:textColor="@color/orange"
            android:background="@null"
            android:text="Linea"/>
        <RelativeLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <Button
            android:id="@+id/btn_polygon"
            android:layout_weight="1"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:drawableTop="@drawable/ic_polygon"
            android:textColor="@color/orange"
            android:background="@null"
            android:text="Poligono"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_map"
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_margin="2dp"
        android:visibility="gone"
        android:clipToPadding="true"
        android:clipChildren="true"
        android:layout_height="200dp">
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapViewPreview"
            android:clipToPadding="true"
            android:name="com.google.android.gms.maps.MapFragment"
            android:clipChildren="true"
            app:liteMode="true"
            app:mapType="normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>