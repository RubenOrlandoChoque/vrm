<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/card_events"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:elevation="0dp"
    android:divider="@android:color/transparent"
    android:backgroundTint="@color/cardColor"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.jackandphantom.circularimageview.CircleImage
            android:id="@+id/img_sex"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user_default"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/img_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_partaker_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="@color/gray_dark"
                android:text="Disertante"/>

            <TextView
                android:id="@+id/txt_name_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19dp"
                android:textColor="@color/gray_dark"
                android:text="Juan Carlos Lopez"/>

            <TextView
                android:id="@+id/txt_document"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="16dp"
                android:text="D.N.I.: 369875687"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/btndelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@drawable/ic_delete"
            android:visibility="visible" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
