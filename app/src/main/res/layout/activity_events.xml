<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.EventsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_title_orange"
            android:layout_height="200dp">
        </RelativeLayout>

        <RelativeLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/title_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="-5dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eventos"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/txt_eventos_proyecto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proyecto: "
                        android:textColor="@color/white"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crear"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/yellow_light"
                    android:background="@null"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:padding="20dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:layout_below="@id/title_events"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/content_events"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardCornerRadius="6dp"
                    android:padding="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingTop="15dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_datefrom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red"
                                android:text="01/02/2019"/>
                            <TextView
                                android:id="@+id/txt_dateto"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/red"
                                android:text="01/02/2019"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_filters"
                            android:weightSum="3">
                            <Button
                                android:id="@+id/btn_today"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:textColor="@color/orange"
                                android:background="@color/yellow_transparent"
                                android:layout_height="35dp"
                                android:text="Hoy"/>
                            <RelativeLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/orange"/>
                            <Button
                                android:id="@+id/btn_month"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:textColor="@color/orange"
                                android:background="@null"
                                android:text="Mes"/>
                            <RelativeLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:background="@color/orange"/>
                            <Button
                                android:id="@+id/btn_filters"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:textColor="@color/orange"
                                android:background="@null"
                                android:text="Filtros"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/event_empty"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_events_empty"/>
                            <TextView
                                android:textSize="18dp"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sin eventos"
                                android:textAlignment="center"/>
                        </LinearLayout>

                        <xyz.sangcomz.stickytimelineview.TimeLineRecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            app:isSticky="true"
                            app:sectionTitleTextColor="@color/yellow"
                            app:stackFromEnd="true"
                            app:timeLineCircleColor="@color/yellow"
                            app:timeLineColor="@color/orange"
                            app:timeLineWidth="2dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:background="@drawable/circle_white">

                <ImageView
                    android:id="@+id/icon_calendar"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="-20dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_calendar" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>